<form id="productform" action="/updateproduct" method="post">
    <div class="container">
        <input type="hidden" name="id" value="<%=item.id%>" />
        <div class="row">
            <div class="col-md-12 heading"> Edit Product (<strong>
                    <%=item.name%>
                </strong>)</div>
        </div>

        <div class="row form-group">
            <div class="col-md-2"><label for="name"> <span class="req mr-1">*</span>Product Name </label>
            </div>
            <div class="col-md-4">
                <input type="text" name="name" id="name" class="form-control" value="<%=item.name%>" required
                    oninput="changehead(event);" maxlength="30" />
                <span class="req" id="err_name"></span>
            </div>
            <div class="col-md-2"><label for="price"><span class="req mr-1">*</span>Product Price</label>
            </div>
            <div class="col-md-4">
                <input type="number" name="price" id="price" min="1" max="9999999" class="form-control" required
                    value="<%=item.price%>" />
                <span class="req" id="err_age"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2"><label for="desc"><span class="req mr-1">*</span>Description</label>
            </div>
            <div class="col-md-4">
                <input type="text" name="desc" id="desc" class="form-control" required value="<%=item.desc%>" />
                <span class="req" id="err_gender"></span>
            </div>
            <div class="col-md-2"><label for="category"><span class="req mr-1">*</span>Category</label>
            </div>
            <div class="col-md-4">
                <select name="category" id="category" class="form-control" required value="<%=item.category%>">
                    <option value="">Select...</option>
                    <option value="Mobile">Mobile</option>
                    <option value="Tablet">Tablet</option>
                    <option value="I-Pod">I-Pod</option>
                </select>
                <span class="req" id="err_zip"></span>
            </div>

        </div>
        <div class="row form-group">
            <div class="col-md-2"><label for="specification">Specification</label></div>
            <div class="col-md-10">
                <textarea name="specification" id="specification" class="form-control" value="<%=item.specification%>"
                    maxlength="1000"></textarea>
                <span class="req" id="err_state"></span>
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary m-1">Update</button>
            <button type="button" class="btn btn-secondary m-1"><a style="text-decoration: none;color:white"
                    href="/viewproduct">Back To Product List</a></button>
        </div>
    </div>
</form>
<script>
    let category = document.querySelector('#category');
    category.value = '<%-item.category%>';
    let specification = document.querySelector('#specification');
    specification.value = '<%-item.specification%>';

    function changehead(e) {
        $(".heading").html(`Edit Product (<strong>${e.target.value}</strong>)`)
    }
</script>